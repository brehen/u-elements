{
  "name": "u-tags",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "customElements": "dist/custom-elements.json",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./custom-elements.json": "./dist/custom-elements.json",
    "./dist/custom-elements.json": "./dist/custom-elements.json",
    "./vscode.css-custom-data.json": "./dist/vscode.css-custom-data.json",
    "./dist/vscode.css-custom-data.json": "./dist/vscode.css-custom-data.json",
    "./vscode.html-custom-data.json": "./dist/vscode.html-custom-data.json",
    "./dist/vscode.html-custom-data.json": "./dist/vscode.html-custom-data.json"
  },
  "scripts": {
    "build": "vite build && tsup src/index.ts --format esm,cjs --dts-only",
    "cem": "custom-elements-manifest analyze --config custom-elements-manifest.config.js",
    "install:all": "npm i && npm i --prefix frameworks/qwik && npm i --prefix frameworks/react && npm i --prefix frameworks/solid && npm i --prefix frameworks/svelte && npm i --prefix frameworks/vue",
    "lint": "eslint",
    "start": "vite",
    "start:qwik": "npm run --prefix frameworks/qwik dev",
    "start:react": "npm run --prefix frameworks/react dev",
    "start:solid": "npm run --prefix frameworks/solid dev",
    "start:svelte": "npm run --prefix frameworks/svelte dev",
    "start:vue": "npm run --prefix frameworks/vue dev",
    "test": "vitest",
    "test:update": "vitest --update",
    "test:coverage": "vitest --coverage.enabled --coverage.include=src/*/*.ts"
  },
  "devDependencies": {
    "@builder.io/qwik": "^1.3.5",
    "@types/jsdom": "21.1.6",
    "@types/react": "^18.2.48",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "@typescript-eslint/parser": "6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "@vue/runtime-dom": "^3.4.14",
    "api-viewer-element": "^1.0.0-pre.8",
    "custom-element-vs-code-integration": "^1.1.1",
    "eslint": "8.56.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "jsdom": "^23.2.0",
    "prettier": "3.2.2",
    "solid-js": "^1.8.11",
    "svelte": "^4.2.8",
    "tsup": "^8.0.1",
    "typescript": "5.3.3",
    "vite": "^5.0.11",
    "vite-plugin-cem": "^0.6.0",
    "vitest": "1.2.0"
  },
  "prettier": {
    "endOfLine": "auto",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2020": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "prettier"
    ],
    "root": true,
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/recommended": {
        "allowDeclarations": true
      }
    }
  },
  "eslintIgnore": [
    "dist",
    "frameworks",
    "node_modules"
  ]
}
